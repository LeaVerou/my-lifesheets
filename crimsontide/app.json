{
	"app": {
		"name": "CrimsonTide",
		"slug": "crimsontide",
		"entry_name": "period",
		"entries_name": "periods",
		"description": "period tracker",
		"private": false,
		"icon": "ðŸ©¸",
		"color": "#5f112c",
		"storage_type": "",
		"storage": "",
		"custom_css": "",
		"charts_placement": ""
	},
	"temporal": {
		"times": "",
		"ranges": "yes"
	},
	"entry": [
		{
			"type": "expression",
			"scope": "entry",
			"flags": [
				"temporal",
				"deletable"
			],
			"settings": {
				"expression": "weekday(date, 'shortname')"
			},
			"name": "weekday"
		},
		{
			"type": "property",
			"scope": "entry",
			"flags": [
				"temporal"
			],
			"settings": {
				"type": "date",
				"default": "[$today]",
				"formatting": [
					"b"
				]
			},
			"name": "date"
		},
		{
			"type": "property",
			"scope": "entry",
			"flags": [
				"temporal"
			],
			"settings": {
				"type": "date",
				"prefix": " to ",
				"visible": "true",
				"default": "",
				"min_date": "[date]"
			},
			"name": "end_date"
		},
		{
			"type": "expression",
			"scope": "entry",
			"flags": [
				"temporal"
			],
			"settings": {
				"visible": "false",
				"expression": "end_date - date + 1 * day()"
			},
			"name": "duration"
		},
		{
			"type": "expression",
			"scope": "entry",
			"flags": [
				"temporal",
				"deletable"
			],
			"settings": {
				"visible": "[end_date ]",
				"prefix": "Period lasted ",
				"suffix": "[if($index > 0, ', ')]",
				"expression": "duration(duration, 2)"
			},
			"name": "duration_readable"
		},
		{
			"type": "expression",
			"scope": "entry",
			"settings": {
				"visible": "[$index > 0]",
				"expression": "duration(cycle_duration, 'days')",
				"prefix": "Cycle lasted "
			},
			"name": "cycle_duration_readable"
		},
		{
			"type": "expression",
			"scope": "entry",
			"settings": {
				"expression": "date - $previous.date",
				"visible": "false"
			},
			"name": "cycle_duration"
		},
		{
			"type": "spacer",
			"scope": "entry",
			"settings": {}
		},
		{
			"type": "property",
			"scope": "entry",
			"settings": {
				"number_style": "bar",
				"bar_style": "discrete"
			},
			"name": "flow"
		},
		{
			"type": "property",
			"scope": "entry",
			"settings": {
				"number_style": "bar",
				"bar_style": "discrete",
				"icon": "ðŸ¥´",
				"default": "1"
			},
			"name": "pain"
		},
		{
			"type": "property",
			"scope": "entry",
			"settings": {
				"type": "text",
				"appearance": "line",
				"multiline": true
			},
			"name": "notes"
		}
	],
	"root": [
		{
			"type": "action",
			"scope": "root",
			"settings": {
				"visible": "edit",
				"target": "add(entry)",
				"target_preset": "new",
				"appearance": "",
				"set_pairs": [],
				"filter_pairs": [],
				"label": "ðŸ©¸ Period started"
			}
		},
		{
			"type": "action",
			"scope": "root",
			"settings": {
				"target_preset": "new",
				"target": "add(entry)",
				"set_pairs": [],
				"filter_pairs": [],
				"label": "ðŸŽ‰ Period ended!"
			}
		},
		{
			"type": "expression",
			"scope": "root",
			"settings": {
				"prefix": "",
				"expression": "average(cycle_duration)",
				"visible": "false"
			},
			"name": "average_cycle"
		},
		{
			"type": "expression",
			"scope": "root",
			"settings": {
				"prefix": "Average cycle length: ",
				"expression": "duration(average_cycle, 'days')"
			}
		},
		{
			"type": "expression",
			"scope": "root",
			"settings": {
				"expression": "date(last(end_date) + average_cycle)",
				"prefix": "",
				"visible": "false"
			},
			"name": "next_period"
		},
		{
			"type": "expression",
			"scope": "root",
			"settings": {
				"prefix": "/ Next period in ",
				"expression": "duration(next_period - $today, 'days')"
			}
		}
	],
	"charts": [
		{
			"type": "chart",
			"scope": "root",
			"settings": {
				"aggregate_of": "cycle_duration",
				"aggregate": "average",
				"number_format": "duration($result, \"days\")",
				"type": "bar"
			}
		},
		{
			"type": "chart",
			"scope": "root",
			"settings": {
				"type": "calendar"
			}
		}
	]
}